@model QulixSystemsTest1.Models.Company

@{
    ViewData["Title"] = "Компания";
}

<h1>@{ViewData["H1"] = Model.Id != 0 ? "Редактировать запись" : "Создать запись";}</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" disabled />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganizationalForm" class="control-label"></label>
                <input asp-for="OrganizationalForm" class="form-control" />
                <span asp-validation-for="OrganizationalForm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" class="form-control" disabled />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index">🡄 Назад</a>
                <input type="submit" value="💾 Сохранить" class="btn btn-light" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
